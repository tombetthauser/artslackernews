doctype html
html
  head
      block head
        title="Express Starter App"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/layout.css')
  body
    div(class="center")
      header
        div(class="logo") 
          a(href="/") S
        h1 
          a(href="/") Slacker News
        div(class="links")
          a(href="#") new | 
          a(href="#") threads | 
          a(href="#") ask | 
          a(href="#") show | 
          a(href="#") jobs | 
          a(href="#") submit | 
          if locals.authenticated
            a(href="#") #{user.username} |
            form(class='header-logout-form' action='/users/logout' method='post')
              button(type='submit') logout
            //- a(href="/users/login") login
          else
            a(href="/users/register") register | 
            a(href="/users/login") login
      div(class="content")
        block content
